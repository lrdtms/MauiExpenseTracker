<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiExpenseTrackerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiExpenseTrackerApp.Pages">

    <!-- Register pages with routes -->
    <TabBar>
        <ShellContent
            Title="Expenses"
            
            Route="main"
            ContentTemplate="{DataTemplate pages:MainPage}" />

        <ShellContent
            Title="Graph"
            
            Route="graph"
            ContentTemplate="{DataTemplate pages:GraphPage}" />
        <ShellContent
            Title="Budget"
    
            Route="budget"
            ContentTemplate="{DataTemplate pages:BudgetPage}" />
    </TabBar>

</Shell>
